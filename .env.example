# =============================================================================
# BooksFlow AI - Environment Variables Template
# =============================================================================
# SECURITY WARNING: This is a template file - NEVER use these values in production
# Copy this file to .env.local and replace with your actual development values
# Never commit actual credentials to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3003

# =============================================================================
# API CONFIGURATION
# =============================================================================
# FastAPI Backend URL
NEXT_PUBLIC_API_URL=http://localhost:8000
API_SECRET_KEY=your-secret-key-here

# =============================================================================
# SUPABASE CONFIGURATION - DEVELOPMENT ONLY
# =============================================================================
# SECURITY: Use separate development/test Supabase project
POSTGRES_URL="your-dev-postgres-url"
POSTGRES_USER="postgres"
POSTGRES_HOST="your-dev-supabase-host"
SUPABASE_JWT_SECRET="your-dev-jwt-secret"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-dev-anon-key"
POSTGRES_PRISMA_URL="your-dev-prisma-url"
POSTGRES_PASSWORD="your-dev-password"
POSTGRES_DATABASE="postgres"
SUPABASE_URL="https://your-dev-project.supabase.co"
NEXT_PUBLIC_SUPABASE_URL="https://your-dev-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-dev-service-role-key"
POSTGRES_URL_NON_POOLING="your-dev-non-pooling-url"

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# OpenAI API configuration for AI features
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# =============================================================================
# AUTHENTICATION SETTINGS
# =============================================================================
# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@booksflow.ai

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Book data APIs
GOOGLE_BOOKS_API_KEY=your-google-books-api-key
GOODREADS_API_KEY=your-goodreads-api-key

# =============================================================================
# QUICKBOOKS INTEGRATION
# =============================================================================
# QuickBooks OAuth 2.0 Configuration - DEVELOPMENT ONLY
QUICKBOOKS_CLIENT_ID=your-quickbooks-dev-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-dev-client-secret
QUICKBOOKS_REDIRECT_URI=http://localhost:3003/api/auth/quickbooks/callback
QUICKBOOKS_SCOPE=com.intuit.quickbooks.accounting
QUICKBOOKS_DISCOVERY_DOCUMENT_URL=https://appcenter.intuit.com/api/v1/connection/oauth2
QUICKBOOKS_SANDBOX_BASE_URL=https://sandbox-quickbooks.api.intuit.com
QUICKBOOKS_PRODUCTION_BASE_URL=https://quickbooks.api.intuit.com
QUICKBOOKS_WEBHOOK_VERIFIER_TOKEN=your-webhook-verifier-token

# QuickBooks Environment (sandbox or production)
QUICKBOOKS_ENVIRONMENT=sandbox

# File storage (if using external storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Application monitoring
SENTRY_DSN=your-sentry-dsn
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Development and testing
SKIP_ENV_VALIDATION=false
DISABLE_ANALYTICS=true

# Database connection (for local development)
DATABASE_URL=postgresql://user:password@localhost:5432/booksflow_dev